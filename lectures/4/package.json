{
    "name": "bc-lec-series-4",
    "version": "1.0.0",
    "private": true,
    "license": "UNLICENSED",
    "description": "A set of code examples for the blockchain lecture series #4",
    "repository": "https://github.com/Institution-for-a-Global-Society/blockchain-lecture-series.git",
    "homepage": "https://github.com/Institution-for-a-Global-Society/blockchain-lecture-series.git#readme",
    "packageManager": "yarn@4.7.0",
    "scripts": {
        "dev": "anvil",
        "compile": "forge b --via-ir --optimize --sizes",
        "clean": "forge clean",
        "lint": "solhint --fix 'lectures/**/*.sol'",
        "lint:dry-run": "solhint 'lectures/**/*.sol'",
        "format-sol": "prettier -w --plugin=prettier-plugin-solidity 'lectures/**/*.sol'",
        "format-sol:dry-run": "prettier -c --plugin=prettier-plugin-solidity 'lectures/**/*.sol'",
        "format-misc": "prettier -w '**/*.ts' '**/*.md' '**/*.json'",
        "format-misc:dry-run": "prettier -c '**/*.ts' '**/*.md' '**/*.json'",
        "deploy-status": "hardhat ignition status chain-31337",
        "deploy:token": "hardhat ignition deploy --network localhost ./ignition/modules/Token.ts",
        "deploy:tokenSol": "hardhat ignition deploy --network localhost ./ignition/modules/TokenSol.ts",
        "deploy:erc20": "hardhat ignition deploy --network localhost ./ignition/modules/ERC20.ts",
        "deploy:erc20Sol": "hardhat ignition deploy --network localhost ./ignition/modules/ERC20Sol.ts",
        "run:token": "hardhat run --network localhost ./scripts/Token.ts",
        "run:tokenSol": "hardhat run --network localhost ./scripts/TokenSol.ts",
        "run:erc20": "hardhat run --network localhost ./scripts/ERC20.ts",
        "run:erc20Sol": "hardhat run --network localhost ./scripts/ERC20Sol.ts"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-foundry": "^1.1.3",
        "@nomicfoundation/hardhat-ignition": "^0.15.10",
        "@nomicfoundation/hardhat-ignition-viem": "^0.15.10",
        "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
        "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
        "@nomicfoundation/hardhat-verify": "^2.0.13",
        "@nomicfoundation/hardhat-viem": "^2.0.6",
        "@nomicfoundation/ignition-core": "^0.15.10",
        "@openzeppelin/contracts": "5.4.0",
        "@types/chai": "^5.2.0",
        "@types/chai-as-promised": "^8.0.2",
        "@types/mocha": "^10.0.10",
        "@types/node": "^25.2.0",
        "chai": "4.3.7",
        "hardhat": "^2.27.0",
        "hardhat-gas-reporter": "^2.2.2",
        "prettier": "^3.8.1",
        "prettier-plugin-solidity": "^2.2.1",
        "solhint": "^6.0.3",
        "solidity-coverage": "^0.8.14",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "viem": "^2.45.1"
    }
}